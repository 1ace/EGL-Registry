RewriteEngine on

# Avoid redirect loops
RewriteCond %{ENV:REDIRECT_STATUS} 200
RewriteRule ^ - [L]

# Old versioned-by-date EGL specs redirected to the single per-version copy
RewriteRule ^specs/eglspec.1.4.([0-9]+).pdf specs/eglspec.1.4.pdf [L,R=301]

